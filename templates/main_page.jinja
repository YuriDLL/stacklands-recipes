<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> Staclands recipices</title>
  <link rel="shortcut icon" href="/static/generate/icon/villager.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

  {% assets "css_all" %}
  <link rel=stylesheet type=text/css href="{{ ASSET_URL }}">
  {% endassets %}
</head>
<body>
  <div class="wrapper">
    <div class="container">
      <header>
        <div class="page-header">Stacklands recipices<div>
      </header>
      <main class="page-body ">
        <div class="accordion" id="accordionPanelsStayOpenExample">

          {% for card_category in cards %}
          <div class="accordion-item game-card-group">

            <h2 class="accordion-header" id="{{card_category}}">
              <div class="accordion-button game-card-group-header" data-bs-toggle="collapse"
                data-bs-target="#{{card_category}}-collapse" aria-expanded="true" aria-controls="{{card_category}}">
                <h3>{{card_category}}</h3>
              </div>
            </h2>
            <div id="{{card_category}}-collapse" class="accordion-collapse collapse show" aria-labelledby="{{card_category}}">
                <div class="accordion-body game-card-group-body">
                  {% for card in cards[card_category] %}

                  <!-- отрисовка карты -->
                  <div class="game-card {{card_category}} {{ card['image_color'] }}-card">
                    <a href="{{ card['url'] }}">
                      <div class="game-card-header"> 
                        <div>{{ card['name'] }}</div>
                      </div>
                      <div class="game-card-body">
                        <img class="game-card-icon" src="{{ card['ico_url'] }}">
                      </div>
                    </a>
                  </div>
                  <!--  -->

                  {% endfor %}
                </div>
            </div>
          </div>
          {% endfor %}


        </div>
      </main>

      
    </div>
    <footer>

    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>