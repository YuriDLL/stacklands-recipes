<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Staclands recipices</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <h1>Staclands recipices</h1>
      <div class="accordion" id="accordionPanelsStayOpenExample">
        {% for card_category in cards %}
        <div class="accordion-item">
          <h2 class="accordion-header" id="{{card_category}}">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#{{card_category}}-collapse" aria-expanded="true" aria-controls="{{card_category}}">
              {{card_category}}
            </button>
          </h2>
          <div id="{{card_category}}-collapse" class="accordion-collapse collapse show" aria-labelledby="{{card_category}}">
            <div class="accordion-body">
              <div class="row mb-3 text-left">
                {% for card in cards[card_category] %}
                  <div class="col-2 themed-grid-col">
                    <a href="{{ card['url'] }}"><img src="{{ card['ico_url'] }}" style="width:64px;height:64px;"> {{ card['name'] }}</a>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    </div>
  </body>
</html>