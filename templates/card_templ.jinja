{% extends "page.jinja" %}

{% from 'card.jinja' import card, recipes_table%}

{% block title %}Staclands {{main_card['name']}} card{% endblock %}
{% block description %}Card "{{main_card['name']}}" create from {{create_recipes|length}} recipes and use in {{use_recipes|length}} recipes{% endblock %}

{% block content %}
<div>
  <div>

    <div class="game-recepie-group">
      <div class="game-recepie-group-name">Create from</div>
      {% if create_recipes %}
      <div class="game-recepie-group-body">
        {{recipes_table(create_recipes)}}
      </div>
      {% endif %}
    </div>

    <div class="game-recepie-group">
      <div class="game-recepie-group-name">Use for</div>
      {% if use_recipes %}
      <div class="game-recepie-group-body">
        {{recipes_table(use_recipes)}}
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}