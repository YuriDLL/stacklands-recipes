<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ card['name'] }}</title>
  <link rel="shortcut icon" href="{{ card['ico_url'] }}">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/style_info_card_page.css">
  <link rel="stylesheet" href="/static/css/reset.css">
  <link rel="stylesheet" href="/static/css/style_color_card.css">
  <link rel="stylesheet" href="/static/css/anim_main.css">
</head>

<body>
  <div class="container">
    <main>

      <div class="row g-5" id="main_block">
        <div class="col-md-1 col-lg-8">
          <div class="general_name" >
            <div class="back_home_card">
            <a href="{{url_for('main_page')}}" id="back_home_card">
              <h2 id="home_page" style="background-color: rgb(239, 181, 167);">Home<p id="card_line"></p>
              </h2>
              <img style="border: 1px solid rgb(245, 156, 135); 
                      background-color:rgb(245, 156, 135);" src="/static/generate/icon/house.ico">
            </a>
          </div>
            <div class="name_game">
              <h4 id="name_game_id">Stacklands</h4>
            </div>
          </div>
          {% if create_recipes %}
          <h2 id="name_table">Create form</h2>
          <table class="table">
            <tbody>
              {% for recepie in create_recipes %}
              <tr>
                <td>
                  {% for card in recepie['inputs'] %}
                  <div class="form_card_left" style="float: left;">
                    <a href="{{ card['url'] }}" id="{{ card['image_color'] }}_link_card">
                      <div class="name_card" id="{{ card['image_color'] }}_card_name">{{ card['name'] }}
                        <p id="card_line"></p>
                      </div> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;">
                    </a>
                    <p class="card_count" id="{{ card['image_color'] }}_card_count">x{{card['count']}}</p>
                  </div>
                  {% endfor %}
                </td>
                <td>
                  <img id="arrow" src={{ url_for('static', filename='img/arrow.png' ) }}
                    style="width:64px;height:64px;">
                </td>
                <td>
                  {% for card in recepie['outputs'] %}
                  <div class="form_card_right" style="float: right;">
                    <a href="{{ card['url'] }}" id="{{ card['image_color'] }}_link_card">
                      <div class="name_card" id="{{ card['image_color'] }}_card_name">{{ card['name'] }} <p
                          id="card_line"></p>
                      </div> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;">
                    </a>
                    <p class="card_count" id="{{ card['image_color'] }}_card_count">x{{card['count']}}</p>
                  </div>
                  {% endfor %}
                </td>
              <tr>
                {% endfor %}
            </tbody>
          </table>
          {% endif %}
          {% if use_recipes %}
          <h2 id="use_for">Use for</h2>
          <table class="table">
            <tbody>
              {% for recepie in use_recipes %}
              <tr>
                <td>
                  {% for card in recepie['inputs'] %}
                  <div class="form_card_left" style="float: left;">
                    <a href="{{ card['url'] }}" id="{{ card['image_color'] }}_link_card">
                      <div class="name_card" id="{{ card['image_color'] }}_card_name">{{ card['name'] }} <p
                          id="card_line"></p>
                      </div> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;">
                    </a>
                    <p class="card_count" id="{{ card['image_color'] }}_card_count">x{{card['count']}}</p>
                  </div>
                  {% endfor %}
                </td>
                <td>
                  <img id="arrow" src={{ url_for('static', filename='img/arrow.png' ) }}
                    style="width:64px;height:64px;">
                </td>
                <td>
                  {% for card in recepie['outputs'] %}
                  <div class="form_card_right" style="float: right;">
                    <a href="{{ card['url'] }}" id="{{ card['image_color'] }}_link_card">
                      <div class="name_card" id="{{ card['image_color'] }}_card_name">{{ card['name'] }} <p
                          id="card_line"></p>
                      </div> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;">
                    </a>
                    <p class="card_count" id="{{ card['image_color'] }}_card_count">x{{card['count']}}</p>
                  </div>
                  {% endfor %}
                </td>
              <tr>
                {% endfor %}
            </tbody>
          </table>
          {% endif %}
        </div>
        <div class="col-md-2 col-lg-2" id="{{ card['image_color'] }}_main_card">
          <h2 id="{{ card['image_color'] }}_name_main_card">{{ card['name'] }} <h6 id="line_main_card"></h6>
          </h2>
          <img src="{{ card['png_url'] }}" id="{{ card['image_color'] }}_img_main_card"
            style="width:156px;height:156px;">
        </div>
      </div>
    </main>
    <footer>

    </footer>
  </div>
</body>

</html>