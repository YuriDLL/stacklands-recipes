<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ card['name'] }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <main>
        <div class="row g-5">
          <div class="col-md-1 col-lg-8">
            <a href= "{{url_for('main_page')}}"><h2>Home</h2></a>
            <h2>Create form</h2>
              <table class="table">
              <tbody>
              {% for recepie in create_recipes %}
                <tr>
                  <td>
                  {% for card in recepie['inputs'] %}
                    <div style="float: left;">
                      <a href={{ card['url'] }}> {{ card['name'] }} <br> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;"></a>
                    </div>
                    <div style="float: left;">
                      <h1>x{{card['count']}}</h1>
                    </div>
                  {% endfor %}
                  </td>
                  <td>
                    <img src={{ url_for('static', filename='img/arrow.png') }} style="width:64px;height:64px;"> 
                  </td>
                  <td>
                  {% for card in recepie['outputs'] %}
                    <div style="float: left;">
                      <a href="{{ card['url'] }}"> {{ card['name'] }} <br> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;"></a>
                    </div>
                    <div style="float: left;">
                      <h1>x{{card['count']}}</h1>
                    </div>
                  {% endfor %}
                  </td>
                <tr>
              {% endfor %}
            </tbody>
            </table>
            <h2>Use for</h2>
            <table class="table">
              <tbody>
              {% for recepie in use_recipes %}
                <tr>
                  <td>
                  {% for card in recepie['inputs'] %}
                    <div style="float: left;">
                      <a href={{ card['url'] }}> {{ card['name'] }} <br> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;"></a>
                    </div>
                    <div style="float: left;">
                      <h1>x{{card['count']}}</h1>
                    </div>
                  {% endfor %}
                  </td>
                  <td>
                    <img src={{ url_for('static', filename='img/arrow.png') }} style="width:64px;height:64px;"> 
                  </td>
                  <td>
                  {% for card in recepie['outputs'] %}
                    <div style="float: left;">
                      <a href="{{ card['url'] }}"> {{ card['name'] }} <br> <img src="{{ card['png_url'] }}" style="width:64px;height:64px;"></a>
                    </div>
                    <div style="float: left;">
                      <h1>x{{card['count']}}</h1>
                    </div>
                  {% endfor %}
                  </td>
                <tr>
              {% endfor %}
            </tbody>
            </table>
          </div>
          <div class="col-md-2 col-lg-2">
            <h2>{{ card['name'] }}</h2>
            <img src="{{ card['png_url'] }}" style="width:256px;height:256px;">
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
